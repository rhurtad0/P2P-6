<table align='center'>
<th> tema</th> <th> pregunta</th> <th colspan='2'>opciones </th>
<% var i; for( i = 0; i< quizes.length; i++ ) { %>
<tr>
<td><%=quizes[i].tema%> &nbsp;</td>
<td><a href="/quizes/<%=quizes[i].id%>"><%= quizes[i].pregunta %></a></td>

<% if(session.user){ %>
<td> <a href="/quizes/<%=quizes[i].id %>/edit"><button>editar</button></a></td>
<td>
	<form method="post" action="/quizes/<%= quizes[i].id %>?_method=delete">
		<button type="submit" onClick="return confirm('Borrar: <%= quizes[i].id %>');">
		borrar
		</button>
	</form>
</td>
<%}%>
</tr>
<% } %>
</table>
<% if(session.user) { %>
<a href="/quizes/new"><button type="button">Crear pregunta</button></a>
<%} %>
<form method='get' action="/quizes">
	<input type="text" name='search' placeholder="Ingrese la palabra a buscar"/>
	<input type='submit' value='Enviar'/>
</form>